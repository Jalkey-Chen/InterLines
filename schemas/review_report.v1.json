{
  "title": "ReviewReport",
  "type": "object",
  "properties": {
    "kind": { "type": "string" },
    "version": { "type": "string" },
    "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
    "provenance": { "type": "array", "items": { "$ref": "#/$defs/Provenance" } },
    "overall": { "type": "number", "minimum": 0, "maximum": 1 },
    "criteria": { "$ref": "#/$defs/ReviewCriteria" },
    "comments": { "type": "array", "items": { "type": "string" } },
    "actions": { "type": "array", "items": { "type": "string" } }
  },
  "required": ["kind", "version", "confidence", "overall", "criteria"],
  "$defs": {
    "Provenance": {
      "type": "object",
      "properties": {
        "source": { "type": "string" },
        "locator": { "type": ["string", "null"] },
        "model": { "type": ["string", "null"] },
        "created_at": { "type": "string", "format": "date-time" },
        "note": { "type": ["string", "null"] }
      },
      "required": ["source", "created_at"]
    },
    "ReviewCriteria": {
      "type": "object",
      "properties": {
        "kind": { "type": "string" },
        "version": { "type": "string" },
        "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
        "provenance": { "type": "array", "items": { "$ref": "#/$defs/Provenance" } },
        "accuracy": { "type": "number", "minimum": 0, "maximum": 1 },
        "clarity": { "type": "number", "minimum": 0, "maximum": 1 },
        "completeness": { "type": "number", "minimum": 0, "maximum": 1 },
        "safety": { "type": "number", "minimum": 0, "maximum": 1 }
      },
      "required": ["kind", "version", "confidence"]
    }
  }
}
