{
  "title": "ExplanationCard",
  "type": "object",
  "properties": {
    "kind": { "type": "string" },
    "version": { "type": "string" },
    "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
    "provenance": { "type": "array", "items": { "$ref": "#/$defs/Provenance" } },
    "claim": { "type": "string" },
    "rationale": { "type": "string" },
    "evidence": {
      "type": "array",
      "items": { "$ref": "#/$defs/EvidenceItem" }
    },
    "summary": { "type": ["string", "null"] }
  },
  "required": ["kind", "version", "confidence", "claim", "rationale"],
  "$defs": {
    "Provenance": {
      "type": "object",
      "properties": {
        "source": { "type": "string" },
        "locator": { "type": ["string", "null"] },
        "model": { "type": ["string", "null"] },
        "created_at": { "type": "string", "format": "date-time" },
        "note": { "type": ["string", "null"] }
      },
      "required": ["source", "created_at"]
    },
    "EvidenceItem": {
      "type": "object",
      "properties": {
        "text": { "type": "string" },
        "source": { "type": ["string", "null"] }
      },
      "required": ["text"]
    }
  }
}
