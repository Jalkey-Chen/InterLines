# Editor-agnostic defaults so CI and local editors agree.

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4
max_line_length = 100

[*.{yml,yaml}]
indent_size = 2

[*.md]
# Whitespace in lists/tables is common; don't over-trim
trim_trailing_whitespace = false